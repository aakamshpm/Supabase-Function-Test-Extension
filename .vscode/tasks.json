{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: compile",
      "type": "shell",
      "command": "npm",
      "args": ["run", "compile"],
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": ["$tsc"],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "npm: watch",
      "type": "shell",
      "command": "npm",
      "args": ["run", "watch"],
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true
    }
  ]
}
// This task compiles TypeScript files using the npm script "compile".
// It is grouped under "build" and uses a dedicated panel for output.
// The task will not reveal the output panel automatically.
// The problem matcher "$tsc" is used to identify TypeScript compilation errors.
// To run this task, you can use the command palette (Ctrl+Shift+P)
